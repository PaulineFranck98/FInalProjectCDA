            <nav class="hidden sm:block border-b border-b-gray-200">
                <ul class='flex justify-between font-medium  text-violet-700 my-3 mx-6 lg:mx-44'>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('location_search') }}">Recherche</a></li>
                    <li><a href="#">Itinéraire</a></li>
                    <li><a href="#">Profil</a></li>
                    <li><a href="#">Déconnexion</a></li>
                </ul>
            </nav>
        {% endif %}
