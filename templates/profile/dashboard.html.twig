{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur votre profil {{ app.user.username }}{% endblock %}


{% block body %}

<section id="profile-dashboard" class="flex min-h-0 lg:h-[calc(100vh-49px)]">

    {% include 'partials/_profile_aside.html.twig' %}

    <section id="profile-container" class="border border-gray-200 w-full  p-8  overflow-y-auto  scrollbar-hide bg-gray-50">
        <div class="mb-10">
    
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4">
                <div class="text-violet-700 bg-violet-50 rounded-lg p-6 flex items-center justify-between border border-violet-200 ">
                    <div>
                        <p class="text-sm">Itinéraires créés</p>
                        <p class="text-xl font-bold text-violet-700">{{ stats.itinerariesCount }}</p>
                    </div>
                    <i class="fa-regular fa-map text-violet-600 text-2xl opacity-80"></i>
                </div>

                <div class="text-violet-700 bg-violet-50 rounded-lg p-6 flex items-center justify-between border border-violet-200 ">
                    <div>
                        <p class="text-sm">Avis laissés</p>
                        <p class="text-xl font-bold text-violet-700">{{ stats.ratingsCount }}</p>
                    </div>
                    <i class="fa-regular fa-star text-violet-600 text-2xl opacity-80"></i>
                </div>
            </div>
        </div>

        <div class="mb-12">
            {% if upcomingItineraries is not empty %}
                <h3 class="text-xl font-semibold text-violet-700 mb-4">Voyages à venir</h3>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    {% for itinerary in upcomingItineraries %}
                        <div class="border border-violet-200 rounded-lg shadow-sm p-4 bg-white hover:shadow-md transition">
                            <h4 class="font-semibold text-violet-700 text-lg mb-2 truncate">{{ itinerary.itineraryName }}</h4>

                            <p class="text-sm text-gray-700 mb-1">
                                <i class="fa-regular fa-calendar text-violet-600 mr-1"></i>
                                Départ prévu le <strong>{{ itinerary.departureDate|date('d/m/Y') }}</strong>
                            </p>

                            {% if itinerary.duration %}
                                <p class="text-sm text-gray-600 mb-2">
                                    <i class="fa-solid fa-route text-violet-600 mr-1"></i>
                                    Durée : {{ itinerary.duration }} jour{{ itinerary.duration > 1 ? 's' }}
                                </p>
                            {% endif %}

                            <a href="{{ path('itinerary_detail', { itineraryId: itinerary.id }) }}"  class="text-sm text-violet-700 underline hover:text-violet-900">
                                Voir l’itinéraire
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>


        <div class="mb-12">
            <h3 class="text-xl font-semibold text-violet-700 mb-4">Derniers itinéraires créés</h3>

            {% if lastItineraries is empty %}
                <p class="text-gray-500">Aucun itinéraire créé pour le moment.</p>
            {% else %}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    {% for itinerary in lastItineraries %}
                        <div class="border border-gray-200 rounded-lg shadow-sm p-4 bg-white hover:shadow-md transition">
                            <h4 class="font-semibold text-violet-700 text-lg mb-2 truncate">{{ itinerary.itineraryName }}</h4>
                            {% if itinerary.departureDate %}
                                <p class="text-sm text-gray-600 mb-1"><i class="fa-regular fa-clock text-violet-600 mr-1"></i>
                                    Départ le {{ itinerary.departureDate|date('d/m/Y') }}
                                </p>
                            {% endif %}
                            {% if itinerary.duration %}
                                <p class="text-sm text-gray-600 mb-3"><i class="fa-solid fa-route text-violet-600 mr-1"></i>
                                    Durée : {{ itinerary.duration }} jour{{ itinerary.duration > 1 ? 's' }}
                                </p>
                            {% endif %}
                            <a href="{{ path('itinerary_detail', { itineraryId: itinerary.id }) }}" class="text-sm text-violet-700 underline hover:text-violet-900">
                                Voir l’itinéraire
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div>
            <h3 class="text-xl font-semibold text-violet-700 mb-4">Derniers avis publiés</h3>
            {% if lastRatings is empty %}
                <p class="text-gray-500">Aucun avis publié pour le moment.</p>
            {% else %}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    {% for data in lastRatings %}
                        {% set rating = data.rating %}
                        {% set locationName = data.locationName %}

                        <div class="border border-gray-200 rounded-lg shadow-sm p-4 hover:shadow-md transition bg-white">
                            <div class="flex items-center justify-between mb-2">
                                <p class="text-violet-700 font-semibold truncate ">
                                    {{ locationName ?? 'Lieu inconnu' }}
                                </p>
                                <div class="text-yellow-500 text-sm">
                                    {{ rating.rating|stars|raw }}
                                </div>
                            </div>

                            {% if rating.comment %}
                                <p class="text-gray-700 text-sm italic mb-2">“{{ rating.comment }}”</p>
                            {% endif %}

                            <p class="text-xs text-gray-500 mb-1">
                                <i class="fa-regular fa-calendar text-violet-600 mr-1"></i>
                                Posté le {{ rating.ratingDate|date('d/m/Y') }}
                            </p>

                            <a href="{{ path('show_ratings') }}" class="text-sm text-violet-700 underline hover:text-violet-900">
                                Voir mes avis
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </div>

    </section>
</section>

{% endblock %}