{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur votre profil {{ app.user.username }}{% endblock %}


{% block body %}

<section id="profile-dashboard" class="flex min-h-0 lg:h-[calc(100vh-49px)]">
    <aside class="flex flex-col lg:w-1/5 shadow-custom-aside py-6">

        <div class="flex flex-col items-center mb-8">
            <div class="relative w-24 h-24 rounded-full overflow-hidden border-4 border-violet-100 shadow-md mb-3 group">

                {% if app.user.profilePicture %}
                    {% if app.user.googleId %}
                        <img src="{{ app.user.profilePicture }}" alt="Photo de profil" class="w-full h-full object-cover">
                    {% else %}
                        <img id="profile-img" src="{{ asset('uploads/' ~ app.user.profilePicture) }}" alt="Photo de profil" class="w-full h-full object-cover">
                    {% endif %}
                {% else %}
                    <img id="profile-img" src="{{ asset('img/default-avatar.png') }}" alt="Avatar par défaut" class="w-full h-full object-cover opacity-80">
                {% endif %}

                {% if app.user.googleId is null %}
                    <label for="profile-upload" class="absolute inset-0 flex items-center justify-center bg-black opacity-0 group-hover:opacity-80 cursor-pointer transition">
                        <i class="fa-solid fa-pen text-white text-lg"></i>
                    </label>
                    <input id="profile-upload" type="file" accept="image/*" class="hidden">
                {% endif %}
            </div>

            <p class="text-violet-700 font-semibold text-center">{{ app.user.username ?? 'Utilisateur' }}</p>
        </div>

        <ul class="w-full lg:pt-2">
            <li class="px-6 py-2"><a href="{{ path('show_dashboard') }}" class="anchors-aside active-anchor-aside"><i class="fa-regular fa-clone mr-5"></i>Tableau de bord</a></li>
            <li class="px-6 py-2"><a href="{{ path('show_profile') }}" class=" anchors-aside"><i class="fa-regular fa-circle-user mr-5"></i>Profil</a></li>
            <li class="px-6 py-2"><a href="{{ path('show_itineraries') }}" class="anchors-aside"><i class="fa-regular fa-map mr-5"></i>Itinéraires</a></li>
            <li class="px-6 py-2"><a href="{{ path('show_ratings') }}" class="anchors-aside"><i class="fa-regular fa-star mr-5"></i>Avis</a></li>
            <li class="px-6 py-2"><a href="" class="anchors-aside"><i class="fa-regular fa-heart mr-5"></i>Favoris</a></li>
            <li class="px-6 py-2"><a href="" class="anchors-aside"><i class="fa-regular fa-pen-to-square mr-5"></i>Lorem</a></li>
        </ul>
    </aside>
    <section id="profile-container" class="border border-gray-200 w-full p-8 overflow-y-auto scrollbar-hide">
        <div class="mb-10">
            {# <h2 class="text-2xl font-semibold text-violet-700 mb-6">Bienvenue {{ app.user.username }}</h2> #}

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4">
                <div class="text-violet-700 bg-violet-50 rounded-lg p-6 flex items-center justify-between ">
                    <div>
                        <p class="text-sm">Itinéraires créés</p>
                        <p class="text-xl font-bold text-violet-700">{{ stats.itinerariesCount }}</p>
                    </div>
                    <i class="fa-regular fa-map text-violet-600 text-2xl opacity-80"></i>
                </div>

                <div class="text-violet-700 bg-violet-50 rounded-lg p-6 flex items-center justify-between ">
                    <div>
                        <p class="text-sm">Avis laissés</p>
                        <p class="text-xl font-bold text-violet-700">{{ stats.ratingsCount }}</p>
                    </div>
                    <i class="fa-regular fa-star text-violet-600 text-2xl opacity-80"></i>
                </div>
            </div>
        </div>

        <div class="mb-12">
            <h3 class="text-xl font-semibold text-violet-700 mb-4">Derniers itinéraires</h3>

            {% if lastItineraries is empty %}
                <p class="text-gray-500">Aucun itinéraire créé pour le moment.</p>
            {% else %}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    {% for itinerary in lastItineraries %}
                        <div class="border border-gray-200 rounded-lg shadow-sm p-4 bg-white hover:shadow-md transition">
                            <h4 class="font-semibold text-violet-700 text-lg mb-2 truncate">{{ itinerary.itineraryName }}</h4>
                            {% if itinerary.departureDate %}
                                <p class="text-sm text-gray-600 mb-1"><i class="fa-regular fa-clock text-violet-600 mr-1"></i>
                                    Départ le {{ itinerary.departureDate|date('d/m/Y') }}
                                </p>
                            {% endif %}
                            {% if itinerary.duration %}
                                <p class="text-sm text-gray-600 mb-3"><i class="fa-solid fa-route text-violet-600 mr-1"></i>
                                    Durée : {{ itinerary.duration }} jour{{ itinerary.duration > 1 ? 's' }}
                                </p>
                            {% endif %}
                            <a href="{{ path('itinerary_detail', { itineraryId: itinerary.id }) }}" class="text-sm text-violet-700 underline hover:text-violet-900">
                                Voir l’itinéraire
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div>
            <h3 class="text-xl font-semibold text-violet-700 mb-4">Derniers avis</h3>
            {% if lastRatings is empty %}
                <p class="text-gray-500">Aucun avis publié pour le moment.</p>
            {% else %}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    {% for data in lastRatings %}
                        {% set rating = data.rating %}
                        {% set locationName = data.locationName %}

                        <div class="border border-gray-200 rounded-lg shadow-sm p-4 hover:shadow-md transition">
                            <div class="flex items-center justify-between mb-2">
                                <p class="text-violet-700 font-semibold truncate ">
                                    {{ locationName ?? 'Lieu inconnu' }}
                                </p>
                                <div class="text-yellow-500 text-sm">
                                    {{ rating.rating|stars|raw }}
                                </div>
                            </div>

                            {% if rating.comment %}
                                <p class="text-gray-700 text-sm italic mb-2">“{{ rating.comment }}”</p>
                            {% endif %}

                            <p class="text-xs text-gray-500 mb-1">
                                <i class="fa-regular fa-calendar text-violet-600 mr-1"></i>
                                Posté le {{ rating.ratingDate|date('d/m/Y') }}
                            </p>

                            <a href="{{ path('show_ratings') }}" class="text-sm text-violet-700 underline hover:text-violet-900">
                                Voir mes avis
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </div>

    </section>
</section>

{% endblock %}