{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg-[url('/public/img/bcg-vignes.webp')] bg-cover bg-center w-screen h-screen flex flex-col justify-center items-center ">
        <div class="bg-white/70 px-5 pt-3 pb-4 rounded-lg w-xs md:w-md">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %} #}
            
                <h1 class="text-xl md:text-2xl font-semibold text-center mb-3">Vous revoilà !</h1>
                <div class="flex flex-col mb-4">
                    <label class="font-semibold md:text-lg" for="username">Email</label>
                    <input class="bg-white rounded-md p-1" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="flex flex-col mb-1">
                    <label class=" font-semibold md:text-lg" for="password">Mot de passe</label>
                    <input class="bg-white rounded-md p-1" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <p class="text-xs md:text-sm"><a href="{{ path('app_forgot_password_request')}}">Vous avez oublié votre mot de passe? <span class="font-semibold underline underline-offset-2">Cliquez ici</span></a></p>
                <p class="flex justify-center" >
                    <button  class="cursor-pointer text-bold text-white bg-gray-700 px-3 py-1 rounded-md my-4  md:text-lg" type="submit">
                        C'est parti !
                    </button>
                </p>    
            </form>
            <div class="flex items-center gap-4 mb-3">
                <div class="flex-1 border-t border-gray-500"></div>
                    <span class="text-gray-700">ou</span>
                <div class="flex-1 border-t border-gray-500"></div>
            </div>
            <div class="flex align-center justify-center gap-3  bg-white rounded-md p-2">
                <figure>
                    <img src="/img/logo_google.webp" alt="logo Google" />
                </figure>
                <p class=" md:text-lg">
                    <a href="{{ path('connect_google', {service: 'google'}) }}">Continuer avec Google</a>
                </p>
            </div>    
        </div>
    </div>
{% endblock %}
