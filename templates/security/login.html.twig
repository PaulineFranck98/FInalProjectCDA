{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg-[url('/public/img/bcg-vignes.png')] bg-cover bg-center w-full h-screen flex flex-col justify-center items-center ">
        <div class="bg-white/70 p-5 rounded-lg">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %} #}
            
                <h1 class="h3 mb-3 font-weight-normal">Vous revoilà !</h1>
                <div class="flex flex-col">
                    <label for="username">Email</label>
                    <input class="bg-white rounded-md" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="flex flex-col">
                    <label for="password">Mot de passe</label>
                    <input class="bg-white rounded-md" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <p><a href="{{ path('app_forgot_password_request')}}">Vous avez oublié votre mot de passe? <span>Cliquez ici</span></a></p>

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </form>

            <p>
                <a href="{{ path('connect_google', {service: 'google'}) }}">Se connecter avec Google</a>
            </p>
        </div>
    </div>
{% endblock %}
