{% extends 'base.html.twig' %}
{% block title %}Recherche de lieux{% endblock %}

{% block body %}

<div class="flex flex-col lg:flex-row lg:gap-6 m-auto lg:w-[80%] lg:h-[calc(100vh-49px)] pb-10">
    <button id="openFilters"
            class="fixed top-2 right-4 bg-violet-700 text-white px-4 py-2 rounded-full shadow-lg z-50 lg:hidden">
        <i class="fa-solid fa-sliders"></i> Filtres
    </button>
    <div id="filtersPanel" class="fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 lg:relative lg:translate-x-0 lg:w-1/2 flex flex-col lg:flex-row gap-6 min-h-0 md:pt-10">
        <form method="get" class="flex flex-col gap-4 bg-white rounded-xl p-4 shadow lg:w-1/2  md:min-w-[320px] overflow-y-auto scrollbar-hide">

            {# accès rapide itinéraires #}
            <div class="flex flex-col gap-2 border border-violet-200 rounded-lg p-3 bg-violet-50">
                <button id="toggleItineraries" type="button"  class="flex justify-between items-center text-violet-800 font-semibold w-full">
                    <span><i class="fa-solid fa-map-location-dot mr-2"></i> Mes itinéraires</span>
                    <i id="chevron" class="fa-solid fa-chevron-down text-sm transition-transform duration-300 cursor-pointer"></i>
                </button>

                <div id="itineraryList" class="hidden flex-col mt-2 text-sm">
                    {% if app.user.itineraries is not empty %}
                        {% for itinerary in app.user.itineraries %}
                            <a href="{{ path('itinerary_detail', {'itineraryId': itinerary.id}) }}"
                            class="text-violet-700 hover:text-violet-900 hover:underline py-1 px-2 rounded transition">
                                {{ itinerary.itineraryName }}
                            </a>
                        {% endfor %}
                    {% else %}
                        <p class="text-gray-500 text-xs italic px-2">Aucun itinéraire pour l’instant.</p>
                    {% endif %}
                </div>
            </div>
            <button id="closeFilters" type="button" class="self-end text-violet-700 mb-2 lg:hidden">
                <i class="fa-solid fa-xmark text-2xl"></i>
            </button>

            <input type="text" name="city" placeholder="Ville" class="border border-gray-300 rounded px-4 py-2 w-full" value="{{ filters.city ?? '' }}" />
            <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Prix</p>
                <div class="flex flex-col gap-2">
                    <div class="flex items-center">
                        <input 
                            type="range" 
                            id="priceMin" 
                            name="priceMin"
                            class="w-2/3 accent-violet-700 cursor-pointer"
                            min="{{ priceRange.minPrice }}" 
                            max="{{ priceRange.maxPrice }}" 
                            value="{{ filters.priceMin ?? priceRange.minPrice }}" 
                            step="1"
                            oninput="
                                const maxInput = document.getElementById('priceMax');
                                if (parseInt(this.value) >= parseInt(maxInput.value)) this.value = maxInput.value - 1;
                                document.getElementById('minPriceDisplay').textContent = this.value;
                            "
                        >
                        <span class="text-sm ms-2">Min : <span id="minPriceDisplay">{{ filters.priceMin ?? priceRange.minPrice }}</span>€</span>
                    </div>
                    <div class="flex items-center">
                        <input 
                            type="range" 
                            id="priceMax" 
                            name="priceMax"
                            class="w-2/3 accent-violet-700 cursor-pointer"
                            min="{{ priceRange.minPrice }}" 
                            max="{{ priceRange.maxPrice }}" 
                            value="{{ filters.priceMax ?? priceRange.maxPrice }}" 
                            step="1"
                            oninput=" 
                                const minInput = document.getElementById('priceMin');
                                if (parseInt(this.value) <= parseInt(minInput.value)) this.value = parseInt(minInput.value) + 1;
                                document.getElementById('maxPriceDisplay').textContent = this.value;"
                        >
                        <span class="text-sm ms-2">Max : <span id="maxPriceDisplay">{{ filters.priceMax ?? priceRange.maxPrice }}</span>€</span>
                    </div>
                </div>
            </div>
            <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Type</p>
                <div class="flex flex-col">
                    {% for type in types %}
                    <div class="flex gap-2 text-[0.9rem] text-gray-700">
                            <input class="accent-violet-700 cursor-pointer"  type="checkbox" name="typeIds[]" value="{{ type.id }}" {% if filters.typeIds is defined and type.id in filters.typeIds %}checked{% endif %}>
                        <label>{{ type.typeName }}</label>
                    </div>
                    {% endfor %}
                </div>
            </div>
            
            <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Avec qui ?</p>
                <div class="flex flex-col">
                    {% for companion in companions %}
                    <div class="flex gap-2 text-[0.9rem] text-gray-700">
                        <input class="accent-violet-700 cursor-pointer" type="checkbox" name="companionIds[]" value="{{ companion.id }}" {% if filters.companionIds is defined and companion.id in filters.companionIds %}checked{% endif %}>
                        <label>{{ companion.companionName}} </label>
                    </div>
                    {% endfor %}
                </div>
            </div>
             <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Thème</p>
                <div class="flex flex-col">
                    {% for theme in themes %}
                    <div class="flex gap-2 text-[0.9rem] text-gray-700">
                        <input class="accent-violet-700 cursor-pointer"  type="checkbox" name="themeIds[]" value="{{ theme.id }}" {% if filters.themeIds is defined and theme.id in filters.themeIds %}checked{% endif %}>
                        <label>{{ theme.themeName }} </label>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Confort</p>
                <div class="flex flex-col">
                    {% for confort in conforts %}
                    <div class="flex gap-2 text-[0.9rem] text-gray-700">
                        <input class="accent-violet-700 cursor-pointer"  type="checkbox" name="confortIds[]" value="{{ confort.id }}" {% if filters.confortIds is defined and confort.id in filters.confortIds %}checked{% endif %}>
                        <label>{{ confort.confortLevel }} </label>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {# <div id="more-filters" class="flex flex-col gap-4"> #}
                <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                    <p>Durée</p>
                    <div class="flex flex-col">
                        {% for duration in durations %}
                        <div class="flex gap-2 text-[0.9rem] text-gray-700">
                            <input class="accent-violet-700 cursor-pointer"  type="checkbox" name="durationIds[]" value="{{ duration.id }}" {% if filters.durationIds is defined and duration.id in filters.durationIds %}checked{% endif %}>
                            <label>{{ duration.onSiteTime|duration_label('long') }}</label>
                        </div>
                        {% endfor %}
                    </div>
                </div>  
                 <div class=" flex flex-col border border-gray-300 rounded px-4 py-2">
                <p>Intensité</p>
                <div class="flex flex-col">
                    {% for intensity in intensities %}
                    <div class="flex gap-2 text-[0.9rem] text-gray-700">
                        <input class="accent-violet-700 cursor-pointer"  type="checkbox" name="intensityIds[]" value="{{ intensity.id }}" {% if filters.intensityIds is defined and intensity.id in filters.intensityIds %}checked{% endif %}>
                        <label>{{ intensity.intensityLevel }} </label>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {# </div> #}
            <div class="w-full flex justify-center items-center gap-4 text-red-600 border  border-red-300 bg-red-50 rounded-md py-2">
                <i class="fa-regular fa-trash-can"></i>
                <a href="{{ path('location_search') }}">Réinitialiser</a>
            </div>
            <button type="submit" class="bg-violet-800 text-white px-6 py-2 rounded-xl mt-4 cursor-pointer">Rechercher</button>
        </form>

        {# partie page avec pagination #}
        <div class="hidden lg:flex flex-col gap-4 lg:w-1/2 min-w-[375px]  overflow-y-auto scrollbar-hide lg:rounded-xl lg:p-4 lg:shadow ">
            {% for location in locations %}
                <div data-location-id="{{ location.id }}" class="relative flex items-center gap-4 border border-violet-200 hover:border-violet-600 rounded-lg  hover:bg-violet-50 transition h-[110px] p-2">
                    {% if location.images|length > 0 %}
                        <img 
                            src="{{ location.images[0].imageName|replace({'/upload/':'/upload/w_300/'}) }}"
                            alt="{{ location.locationName }}"
                            class="object-cover rounded-md h-full w-32">
                    {% else %}
                        <div class="w-32 h-full bg-gray-200 rounded-md flex items-center justify-center text-gray-400 text-sm ">
                            Aucune image
                        </div>
                    {% endif %}
                    <div class="flex flex-col justify-center gap-1 ">

                        <a href="{{ path('location_detail', {'id': location.id}) }}" class="font-semibold text-violet-800 hover:underline">
                            {{ location.locationName }}
                        </a>
                      
                        {% if location.city %}
                                <p class="text-xs text-gray-600 ">{{ location.city }}</p>
                        {% endif %}

                        {% if location.averageRating %}
                            <div class="flex gap-1 text-gray-800 font-light text-sm">
                                <p>{{ location.averageRating|number_format(1, ',', '') }}</p>
                                <div class="text-[0.75rem]">{{ location.averageRating|round(1, 'floor')|stars|raw }}</div>
                            </div>
                        {% else %}
                            <p class="text-sm text-gray-400">Pas encore noté</p>
                        {% endif %}
                        
                        {% if location.duration and location.duration.onSiteTime %}
                            <div class="flex gap-2 items-center text-gray-600">
                                <i class="fa-regular fa-clock text-sm"></i>
                                <p class="text-sm "><label>{{ location.duration.onSiteTime|duration_label('short') }}</label></p>
                            </div>    
                        {% endif %}
                       
                    </div>
       
                    <button 
                        class="add-to-itinerary absolute top-[5px] right-2 text-violet-800 hover:text-violet-600 text-lg cursor-pointer"
                        data-location-id="{{ location.id }}"
                        title="Ajouter à un itinéraire">
                        <i class="fa-solid fa-circle-plus"></i>
                    </button>
                </div>
            {% else %}
                <p class="text-center text-gray-500">Aucun lieu trouvé.</p>
            {% endfor %}

            {# Pagination #}
            {% if pagination and pagination.totalPages > 1 %}
                <nav class="flex justify-center mt-6" aria-label="Pagination">
                    <ul class="inline-flex items-center -space-x-px">
                        
                        {% set prevPage = pagination.page > 1 ? pagination.page - 1 : 1 %}
                        <li>
                            <a  
                                href="{{ path(app.request.attributes.get('_route'), filters|merge({'page': prevPage})) }}" 
                                class="px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700"
                                aria-label="Page précédente"
                            >
                                &laquo;
                            </a>
                        </li>
                        {# numéro page #}
                        {% for p in 1..pagination.totalPages %}
                            <li>
                                <a href="{{ path(app.request.attributes.get('_route'), filters|merge({'page': p})) }}"
                                    class="px-3 py-2 leading-tight border border-gray-300
                                    {% if p == pagination.page %}
                                        text-white bg-violet-700
                                    {% else %}
                                        text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700
                                    {% endif %}
                                ">
                                    {{ p }}
                                </a>
                            </li>
                        {% endfor %}
                        
                        {% set nextPage = pagination.page < pagination.totalPages ? pagination.page + 1 : pagination.totalPages %}
                        <li>
                            <a  
                                href="{{ path(app.request.attributes.get('_route'), filters|merge({'page': nextPage})) }}"
                                class="px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700"
                                aria-label="Page suivante"
                            >
                                &raquo;
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
   
    <div class="lg:w-1/2 lg:pt-10 lg:h-full h-screen relative">
        <div id="search-map" class="w-full  bg-gray-200 rounded-xl h-full" data-locations='{{ locations|json_encode }}'>
            <span class="text-gray-500">Carte</span>
        </div>
    </div>
</div>

<script src='https://unpkg.com/maplibre-gl@5.6.1/dist/maplibre-gl.js'></script>
<script src="{{ asset('js/location-search.js') }}"></script>
<script src="{{ asset('js/itinerary-modal.js') }}"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const button = document.getElementById('toggleItineraries');
        const list = document.getElementById('itineraryList');
        const chevron = document.getElementById('chevron');

        if (button && list) {
            button.addEventListener('click', () => {
                list.classList.toggle('hidden');
                chevron.classList.toggle('rotate-180');
            });
        }
    });
</script>

{# ---------------- MODALE ITINÉRAIRE ---------------- #}
    <div id="itinerary-modal" class="hidden fixed inset-0 bg-black/50 flex justify-center items-center z-50">
        <div class="relative bg-white rounded-xl p-6 w-full max-w-md">
            <h2 class="text-xl font-semibold mb-4 text-violet-800">Choisir un itinéraire</h2>
            <div id="itinerary-list">
                <p class="text-gray-600">Chargement...</p>
            </div>
            <div class="text-center mt-6">
                <a href="{{ path('itinerary_new') }}" id="create-itinerary-btn"
                    class="bg-violet-800 text-white px-4 py-2 rounded-md hover:bg-violet-700">
                    Créer un itinéraire
                </a>
            </div>
            <button id="close-itinerary-modal" 
                    class="absolute top-4 right-4 text-gray-500 text-lg hover:text-gray-800 cursor-pointer">
                ×
            </button>
        </div>
    </div>

{% endblock %}
