<div id="visited-modal" class="hidden fixed inset-0 bg-black/50 flex justify-center items-center z-50">
    <div class="relative bg-white rounded-xl p-6 w-full max-w-md">
        <h2 class="text-xl font-semibold mb-4 text-violet-800">Quand avez-vous visité ce lieu ?</h2>

        <div id="visited-form" class="space-y-4">
            <input type="date" id="visited-date" class="border border-gray-300 rounded-md p-2 w-full focus:ring-2 focus:ring-violet-700 focus:border-violet-700" max="{{ 'now'|date('Y-m-d') }}"/>
            <div class="flex justify-end space-x-2">
                <button id="cancel-visited" class="bg-gray-200 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-300 cursor-pointer">Annuler</button>
                <button id="confirm-visited" class="bg-violet-800 text-white px-4 py-2 rounded-md hover:bg-violet-700 cursor-pointer">Valider</button>
            </div>
        </div>
        <button id="close-visited-modal" 
                class="absolute top-4 right-4 text-gray-500 text-lg hover:text-gray-800 cursor-pointer">
            ×
        </button>
    </div>
</div>
