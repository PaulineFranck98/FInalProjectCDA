{% extends 'base.html.twig' %}
{% block title %}Locations List{% endblock %}

{% block body %}
    <div class="mt-12">
        <h1 class="text-3xl font-bold text-center mb-5">Liste des lieux</h1>

        <div class="w-xl mx-auto">
            {% for location in locations %}
                <a href="{{ path('location_detail', {'id': location.id}) }}">
                    <p class="text-center font-medium  mt-4 border-violet-600 hover:bg-violet-600 hover:text-white transition-colors duration-300 ease-in-out border px-4 py-2 rounded cursor-pointer">{{ location.locationName }}</p>
                </a>
            {% endfor %}
        </div> 
    </div>    
{% endblock %}