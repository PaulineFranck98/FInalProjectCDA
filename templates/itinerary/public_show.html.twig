{% extends 'base.html.twig' %}
{% block title %}{{ itinerary.itineraryName }} - Itinéraire public{% endblock %}

{% block body %}
<div class="lg:flex max-w-7xl mx-auto lg:h-[calc(100vh-100px)] mt-6 mb-6 gap-6">

    <div id="itinerary-locations" class="flex flex-col lg:w-1/2 min-w-[375px] lg:rounded-xl lg:p-4 lg:shadow max-h-[calc(100vh-2rem)]">
        <div class="flex-shrink-0 mb-4">
   
            <div class="flex items-center justify-between mb-4">
                <h1 class="text-2xl font-semibold text-violet-800">{{ itinerary.itineraryName }}</h1>

                {% if app.user %}
                    <button 
                        class="favorite-btn text-2xl transition cursor-pointer"
                        data-itinerary-id="{{ itinerary.id }}"
                        title="{{ app.user.favoriteItineraries.contains(itinerary) ? 'Retirer des favoris' : 'Ajouter aux favoris' }}"
                    >
                        {% if app.user.favoriteItineraries.contains(itinerary) %}
                            <i class="fa-solid fa-heart text-violet-600"></i>
                        {% else %}
                            <i class="fa-regular fa-heart text-gray-400 hover:text-violet-600"></i>
                        {% endif %}
                    </button>
                {% endif %}
            </div>

     
            {% if itinerary.createdBy is defined and itinerary.createdBy is not null %}
                {% set creatorName = itinerary.createdBy.username ?? itinerary.createdBy.name ?? 'Anonyme' %}
                <p class="text-sm text-gray-600 mb-4">
                    <i class="fa-regular fa-user text-violet-600 mr-1"></i>
                    Créé par
                    {% if itinerary.createdBy.id is defined %}
                        <a href="{{ path('public_profile', { id: itinerary.createdBy.id }) }}"
                        class="font-medium text-violet-700 hover:text-violet-900 hover:underline transition">
                            {{ creatorName }}
                        </a>
                    {% else %}
                        <span class="font-medium text-violet-700">{{ creatorName }}</span>
                    {% endif %}
                </p>
            {% else %}
                <p class="text-sm text-gray-600 mb-4">
                    <i class="fa-regular fa-user text-violet-600 mr-1"></i>
                    Créé par <span class="font-medium text-violet-700">Anonyme</span>
                </p>
            {% endif %}

         
    
            <div class="flex flex-col gap-1 text-sm text-gray-700">
                <div class="flex items-center gap-2">
                    <i class="fa-regular fa-clock text-violet-600"></i>
                    <span>
                        Durée : <span class="font-medium text-violet-700">{{ itinerary.duration }}</span>
                        jour{{ itinerary.duration > 1 ? 's' }}
                    </span>
                </div>

                <div class="flex items-center gap-2">
                    <i class="fa-regular fa-calendar text-violet-600"></i>
                    <span>Créé le {{ itinerary.creationDate|date('d/m/Y') }}</span>
                </div>
            </div>


            <p class="text-sm text-gray-600 mt-4">
                <i class="fa-solid fa-heart text-violet-600 mr-1"></i>
                Ajouté en favori par 
                <span id="favorites-count">{{ itinerary.favoritedBy|length }}</span> utilisateur{{ itinerary.favoritedBy|length > 1 ? 's' }}
            </p>

          
        </div>
        <div class="flex-1 overflow-y-auto scrollbar-hide box-shadow-inset-itinerary p-3 rounded-lg">
            {% if locations is empty %}
                <p class="text-gray-500 text-center py-10">Aucun lieu n’a encore été ajouté à cet itinéraire.</p>
            {% else %}
                {% for item in locations %}
                    {% set location = item.data %}

                    {% set hasDiscount = location.discounts is defined and location.discounts|length > 0 %}
                    {% set discountValue = hasDiscount ? ('-' ~ location.discounts[0].percentage ~ '%') : null %}

                    <div class="relative flex items-center gap-4 border rounded-lg transition h-[110px] p-2 mb-2
                            {% if hasDiscount %}
                                border-violet-400 bg-violet-50 hover:border-violet-700 hover:bg-violet-100
                            {% else %}
                                border-violet-200 hover:border-violet-600 hover:bg-violet-50
                            {% endif %}
                        ">
                       
                       
                        <div class="flex items-center gap-4 h-full">
                             <div class="relative w-32 h-full">
                                {% if location.images and location.images|length > 0 %}
                                    <img 
                                        src="{{ location.images[0].imageName|replace({'/upload/':'/upload/w_300/'}) }}"
                                        alt="{{ location.locationName }}"
                                        class="object-cover rounded-md h-full w-full">
                                {% else %}
                                    <div class="w-full h-full bg-gray-200 rounded-md flex items-center justify-center text-gray-400 text-sm">
                                        Aucune image
                                    </div>
                                {% endif %}

                                {% if hasDiscount %}
                                    <div class="absolute top-1 left-1 bg-violet-700 text-white text-[0.7rem] font-semibold px-2 py-0.5 rounded-md shadow">
                                        {{ discountValue }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="flex flex-col justify-center gap-1">
                                <a href="{{ path('location_detail', {'id': location.id}) }}"
                                   class="font-semibold text-violet-800 hover:underline">
                                   <span class="location-index">{{ item.order + 1 }}</span>. {{ location.locationName }}
                                </a>

                                {% if location.city %}
                                    <p class="text-xs text-gray-600">{{ location.city }}</p>
                                {% endif %}

                                {% if location.averageRating %}
                                    <div class="flex gap-1 text-gray-800 font-light text-sm">
                                        <p>{{ location.averageRating|number_format(1, ',', '') }}</p>
                                        <div class="text-[0.75rem]">{{ location.averageRating|round(1, 'floor')|stars|raw }}</div>
                                    </div>
                                {% else %}
                                    <p class="text-sm text-gray-400">Pas encore noté</p>
                                {% endif %}

                                {% if location.duration and location.duration.onSiteTime %}
                                    <div class="flex gap-2 items-center text-gray-600">
                                        <i class="fa-regular fa-clock text-sm"></i>
                                        <p class="text-sm">
                                            {{ location.duration.onSiteTime|duration_label('short') }}
                                        </p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="lg:w-1/2 lg:h-full h-screen relative">
        <div id="itinerary-map" class="w-full bg-gray-200 rounded-xl h-full" data-locations='{{ locations|map(item => { "id": item.data.id, "order": item.order, "data": item.data })|json_encode }}'>
             <span class="text-gray-500">Carte</span>
        </div>
    </div>
</div>

<script src='https://unpkg.com/maplibre-gl@5.6.1/dist/maplibre-gl.js'></script>
<script src="{{ asset('js/itinerary-detail.js') }}"></script>
<script src="{{ asset('js/itinerary-favorite.js') }}"></script>

{% endblock %}
