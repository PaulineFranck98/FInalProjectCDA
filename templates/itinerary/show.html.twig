{% extends 'base.html.twig' %}

{% block title %}{{ itinerary.itineraryName }} - Mon itinéraire{% endblock %}

{% block body %}

<div class="lg:flex max-w-7xl mx-auto lg:h-[calc(100vh-100px)] mt-6 mb-6 gap-6">
    <div id="itinerary-locations"
        class="hidden lg:flex flex-col lg:w-1/2 min-w-[375px] lg:rounded-xl lg:p-4 lg:shadow max-h-[calc(100vh-2rem)]">
        <div class="flex-shrink-0 mb-4 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-semibold text-violet-800">{{ itinerary.itineraryName }}</h1>
                <p class="text-gray-600 text-sm">{{ itinerary.duration }} jour{{ itinerary.duration > 1 ? 's' }} — créé
                    le {{ itinerary.creationDate|date('d/m/Y') }}</p>
                {% if itinerary.departureDate %}
                <p class="text-gray-600 text-sm">
                    Départ prévu le {{ itinerary.departureDate|date('d/m/Y') }}
                </p>
                {% endif %}
                <div class="mt-3">
                    <a href="{{ path('location_search') }}"
                        class="bg-violet-700 hover:bg-violet-600 text-white text-sm font-medium px-4 py-2 rounded-md inline-flex items-center gap-2 transition">
                        <i class="fa-solid fa-plus text-white"></i>
                        Ajouter des lieux
                    </a>
                </div>
            </div>
            <div class="flex flex-col items-end gap-2">
                {% if itinerary.isPublic %}
                <span class="bg-green-100 text-green-700 text-xs font-medium px-3 py-1 rounded-full">Public</span>
                {% else %}
                <span class="bg-gray-200 text-gray-700 text-xs font-medium px-3 py-1 rounded-full">Privé</span>
                {% endif %}

                <div class="flex flex-col items-center gap-1 mt-1">
                    <a href="{{ path('itinerary_edit', { itineraryId: itinerary.id }) }}"
                        class="text-violet-700 hover:text-violet-900 text-sm" title="Modifier cet itinéraire">
                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                    </a>
                    <form method="post" action="{{ path('itinerary_delete', { itineraryId: itinerary.id }) }}"
                        onsubmit="return confirm('Supprimer définitivement cet itinéraire ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_itinerary_' ~ itinerary.id) }}">
                        <button type="submit" class="text-red-600 hover:text-red-800 text-sm cursor-pointer"
                            title="Supprimer l’itinéraire">
                            <i class="fa-regular fa-trash-can text-lg"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="flex-1 overflow-y-auto scrollbar-hide box-shadow-inset-itinerary p-3 rounded-lg sortable-locations"
            data-itinerary-id="{{ itinerary.id }}">
            {% if locations is empty %}
            <p class="text-gray-500 text-center py-10">Aucun lieu n’a encore été ajouté à cet itinéraire.</p>
            {% else %}
            {% for item in locations %}

            {% set location = item.data %}
            {% set hasDiscount = location.discounts is defined and location.discounts|length > 0 %}
            {% set discountValue = hasDiscount ? ('-' ~ location.discounts[0].percentage ~ '%') : null %}

            <div data-location-id="{{ location.id }}" class="location-item relative flex items-center justify-between gap-4 border rounded-lg transition h-[110px] p-2 mb-2
                            {% if hasDiscount %}
                                border-violet-400 bg-violet-50 hover:border-violet-700 hover:bg-violet-100
                            {% else %}
                                border-violet-200 hover:border-violet-600 hover:bg-violet-50
                            {% endif %}
                        ">
                <div class="flex items-center gap-4 h-full">
                    <div class="relative w-32 h-full">
                        {% if location.images and location.images|length > 0 %}
                        <img src="{{ location.images[0].imageName|replace({'/upload/':'/upload/w_300/'}) }}"
                            alt="{{ location.locationName }}" class="object-cover rounded-md h-full w-full">
                        {% else %}
                        <div
                            class="w-full h-full bg-gray-200 rounded-md flex items-center justify-center text-gray-400 text-sm">
                            Aucune image
                        </div>
                        {% endif %}

                        {% if hasDiscount %}
                        <div
                            class="absolute top-1 left-1 bg-violet-700 text-white text-[0.7rem] font-semibold px-2 py-0.5 rounded-md shadow">
                            {{ discountValue }}
                        </div>
                        {% endif %}
                    </div>
                    <div class="flex flex-col justify-center gap-1">
                        <a href="{{ path('location_detail', {'id': location.id}) }}"
                            class="font-semibold text-violet-800 hover:underline">
                            <span class="location-index">{{ item.order + 1 }}</span>. {{ location.locationName }}
                        </a>

                        {% if location.city %}
                        <p class="text-xs text-gray-600">{{ location.city }}</p>
                        {% endif %}

                        {% if location.averageRating %}
                        <div class="flex gap-1 text-gray-800 font-light text-sm">
                            <p>{{ location.averageRating|number_format(1, ',', '') }}</p>
                            <div class="text-[0.75rem]">{{ location.averageRating|round(1, 'floor')|stars|raw }}</div>
                        </div>
                        {% else %}
                        <p class="text-sm text-gray-400">Pas encore noté</p>
                        {% endif %}

                        {% if location.duration and location.duration.onSiteTime %}
                        <div class="flex gap-2 items-center text-gray-600">
                            <i class="fa-regular fa-clock text-sm"></i>
                            <p class="text-sm">
                                {{ location.duration.onSiteTime|duration_label('short') }}
                            </p>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <form method="post"
                    action="{{ path('itinerary_remove_location', { 'itineraryId': itinerary.id, 'locationId': location.id }) }}"
                    onsubmit="return confirm('Supprimer ce lieu de l’itinéraire ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('remove_location_' ~ location.id) }}">
                    <button type="submit" class="text-red-600 hover:text-red-600 cursor-pointer"
                        title="Supprimer le lieu">
                        <i class="fa-regular fa-trash-can"></i>
                    </button>
                </form>
            </div>
            {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="lg:w-1/2  lg:h-full h-screen relative">
        <div id="itinerary-map" class="w-full bg-gray-200 rounded-xl h-full"
            data-locations='{{ locations|map(item => { "id": item.data.id,  "order": item.order, "data": item.data })|json_encode }}'>
            <span class="text-gray-500">Carte</span>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="{{ asset('js/itinerary-reorder.js') }}"></script>
<script src="{{ asset('js/itinerary-detail.js') }}"></script>
<script src='https://unpkg.com/maplibre-gl@5.6.1/dist/maplibre-gl.js'></script>


{% endblock %}